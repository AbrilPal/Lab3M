<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Contactos">

    <TextView
            android:text="Mis Contactos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="107dp" android:layout_marginStart="107dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="107dp"
            android:layout_marginRight="107dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"/>
    <ListView
            android:layout_width="395dp"
            android:layout_height="312dp" android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="43dp"
            app:layout_constraintBottom_toTopOf="@+id/nuevocont" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:id="@+id/listac"/>
    <Button
            android:text="Agregar Contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nuevocont" android:layout_marginEnd="120dp" android:layout_marginRight="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="43dp"
            app:layout_constraintTop_toBottomOf="@+id/_dynamic" android:layout_marginBottom="41dp"
            app:layout_constraintBottom_toBottomOf="parent" style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="125dp"
            android:layout_marginStart="125dp"/>
</android.support.constraint.ConstraintLayout>